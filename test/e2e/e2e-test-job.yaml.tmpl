apiVersion: batch/v1
kind: Job
metadata:
  name: $JOB_NAME
  namespace: e2e-test
spec:
  backoffLimit: 0
  template:
    metadata:
      name: e2e-test
    spec:
      serviceAccountName: e2e-test-sa
      restartPolicy: Never
      containers:
        - name: e2e-test
          image: gcr.io/$PROJECT_ID/e2e-test:$GCP_PROVIDER_SHA
          imagePullPolicy: Always
          env:
          - name: GCP_PROVIDER_SHA
            value: "$GCP_PROVIDER_SHA"
          - name: PROJECT_ID
            value: "$PROJECT_ID"
          - name: SECRET_STORE_VERSION
            value: "$SECRET_STORE_VERSION"
          - name: GKE_VERSION
            value: "$GKE_VERSION"
